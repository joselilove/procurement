                                        <strong><span id="date_end">Saturday 24 June 2017 - 21:44</span></strong>
                                </div>
                            </div>
                                
                        
                            <hr>
                                <form class="floating-labels m-t-40">
                                    <div class="form-group m-b-40">
                                        <input type="text" class="form-control text-center" id="title_field" data-toggle="tooltip" data-placement="bottom" title="input with tooltip!!" readonly>
                                        <span class="bar"></span>
                                        <label>Title</label>
                                    </div>                                    
                                    <div class="form-group m-b-5">
                                        <textarea class="form-control text-center" rows="4" id="content_field"readonly></textarea>
                                        <span class="bar"></span>
                                        <label>Content</label>
                                    </div>
                                </form>

                                <input type="hidden" id="announcement-id">  
                                <input type="hidden" id="start_time">
                                <input type="hidden" id="end_time">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
